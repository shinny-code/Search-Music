<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginVertical="24dp"
    android:padding="24dp">

    <ImageView
        android:id="@+id/ivArtwork"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20sp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/ivArtwork"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp"/>

    <TextView
        android:textColor="@color/white"
        android:id="@+id/tvArtist"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvArtist"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tvDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@id/seekBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="6dp"/>

    <ImageView
        android:id="@+id/btnShuffle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/shuffle"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPrev"
        android:layout_marginTop="16dp"
        app:layout_constraintHorizontal_chainStyle="packed"/>

    <ImageView
        android:id="@+id/btnPrev"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/prev"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        app:layout_constraintStart_toEndOf="@id/btnShuffle"
        app:layout_constraintEnd_toStartOf="@id/btnPlay"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/btnPlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:src="@drawable/play"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        app:layout_constraintStart_toEndOf="@id/btnPrev"
        app:layout_constraintEnd_toStartOf="@id/btnNext"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"/>

    <ImageView
        android:id="@+id/btnNext"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@drawable/next"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        app:layout_constraintStart_toEndOf="@id/btnPlay"
        app:layout_constraintEnd_toStartOf="@id/btnLoop"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/btnLoop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/loop"
        app:layout_constraintTop_toBottomOf="@id/tvDuration"
        app:layout_constraintStart_toEndOf="@id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
